// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model NewsCard {
  id           String   @id @default(cuid())
  rank         Int
  title        String
  summary      String
  channel      String
  publishedAt  DateTime
  duration     String
  thumbnailUrl String
  videoUrl     String
  views        Int
  likes        Int
  comments     Int
  tags         String
  category     String
  createdAt    DateTime @default(now())

  @@index([category])
  @@index([publishedAt])
  @@index([title])
}

